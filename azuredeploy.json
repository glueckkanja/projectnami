{
  "$schema": "http://schema.management.azure.com/schemas/2014-04-01-preview/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "siteName": {
      "type": "string"
    },
    "hostingPlanName": {
      "type": "string",
      "defaultValue": "Default-Web-WestEurope"
    },
    "siteLocation": {
      "type": "string",
      "defaultValue": "West Europe"
    },
    "sku": {
      "type": "string",
      "allowedValues": [
        "Standard"
      ],
      "defaultValue": "Standard"
    },
    "workerSize": {
      "type": "string",
      "allowedValues": [
        "0",
        "1",
        "2"
      ],
      "defaultValue": "2"
    },
    "sqlServerName": {
      "type": "string",
      "defaultValue": "genericsql"
    },
    "sqlAdministratorLogin": {
      "type": "string"
    },
    "sqlAdministratorPassword": {
      "type": "securestring"
    },
    "sqlCollation": {
      "type": "string",
        "allowedValues": [
        "SQL_Latin1_General_CP1_CI_AS"
        ],
      "defaultValue": "SQL_Latin1_General_CP1_CI_AS"
    },
    "repoUrl": {
      "type": "string"
    },
    "branch": {
      "type": "string"
    }
  },
  "resources": [
    {
      "name": "[parameters('sqlServerName')]",
      "type": "Microsoft.Sql/servers",
      "location": "[parameters('siteLocation')]",
      "apiVersion": "2014-04-01-preview",
      "properties": {
        "administratorLogin": "[parameters('sqlAdministratorLogin')]",
        "administratorLoginPassword": "[parameters('sqlAdministratorPassword')]",
        "version": "12.0"
      },
      "resources": [
        {
          "name": "[parameters('siteName')]",
          "type": "databases",
          "location": "[parameters('siteLocation')]",
          "apiVersion": "2014-04-01-preview",
          "dependsOn": [
            "[concat('Microsoft.Sql/servers/', parameters('sqlServerName'))]"
          ],
          "properties": {
            "edition": "Basic",
            "collation": "[parameters('sqlCollation')]",
            "maxSizeBytes": "2147483648",
            "requestedServiceObjectiveId": "dd6d99bb-f193-4ec1-86f2-43d3bccbc49c"
          }
        },
        {
          "apiVersion": "2014-04-01-preview",
          "dependsOn": [
            "[concat('Microsoft.Sql/servers/', parameters('sqlServerName'))]"
          ],
          "location": "[parameters('siteLocation')]",
          "name": "AllowAllWindowsAzureIps",
          "properties": {
            "endIpAddress": "0.0.0.0",
            "startIpAddress": "0.0.0.0"
          },
          "type": "firewallrules"
        }
      ]
    },
    {
      "apiVersion": "2014-06-01",
      "name": "[parameters('siteName')]",
      "type": "Microsoft.Web/Sites",
      "location": "[parameters('siteLocation')]",
      "dependsOn": [
        "[concat('Microsoft.Web/serverFarms/', 'DefaultServerFarm')]"
      ],
      "tags": {
        "[concat('hidden-related:', resourceGroup().id, '/providers/Microsoft.Web/serverfarms/', 'DefaultServerFarm')]": "empty"
      },
      "properties": {
        "name": "[parameters('siteName')]",
        "serverFarm": "DefaultServerFarm"
      },
      "resources": [
        {
          "apiVersion": "2014-04-01",
          "type": "config",
          "name": "web",
          "dependsOn": [
            "[concat('Microsoft.Web/Sites/', parameters('siteName'))]"
          ],
          "properties": {
            "appSettings": [
                {
                    "name": "ProjectNami.DBHost",
                    "value": "[concat(reference(concat('Microsoft.Sql/servers/', parameters('sqlServerName'))).fullyQualifiedDomainName)]"
                },
                { 
                    "name": "ProjectNami.DBName",
                    "value": "[parameters('siteName')]"
                },
                { 
                    "name": "ProjectNami.DBUser",
                    "value": "[concat(parameters('sqlAdministratorLogin'), '@', parameters('sqlServerName'))]"
                },
                { 
                    "name": "ProjectNami.DBPass",
                    "value": "[parameters('sqlAdministratorPassword')]"
                },
                { 
                    "name": "ProjectNamiLogTranslate",
                    "value": 1
                }
            ],
            "phpVersion": "5.5"
          }
        },
        {
          "apiVersion": "2014-04-01",
          "name": "web",
          "type": "sourcecontrols",
          "dependsOn": [
            "[resourceId('Microsoft.Web/Sites', parameters('siteName'))]",
            "[concat('Microsoft.Web/Sites/', parameters('siteName'), '/config/web')]"
          ],
          "properties": {
            "RepoUrl": "[parameters('repoUrl')]",
            "branch": "[parameters('branch')]",
            "IsManualIntegration": true
          }
        }
      ]
    }
  ]
}
